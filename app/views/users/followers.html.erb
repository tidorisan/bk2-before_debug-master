<div class="container">
	<div class="row">

		<div class="col-xs-12">

<!-- もし何もない場合　aさんが誰もフォローしていない場合　-->
<!-- aさんをフォローしてる人を数える　0だった場合 -->
			<% if @user.passive_relationships.count == 0 %>

				<p>ユーザーはいません</p>

			<% else %>

				<h1>Followers Users</h1>

				<table class="table">

					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<!--  -->
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>

					<!-- aさんがフォローしているユーザw一覧 -->
					<!-- 書き方注意 -->
					<!-- following_id だけで無く　レコード全て持ってくる場合 -->
						<% @user.followings.each  do |user| %>


							<tr>

								<!-- user.profile_image -->
								<td><%= attachment_image_tag(user, :profile_image, :fill, 50,50, fallback: "no-image-mini.jpg") %></td>

								<!-- user.name -->
								<td><%= user.name %></td>

								<!-- フォロー数 -->
								<td>フォロー数: <%= user.active_relationships.count %></td>

								<!-- フォロワー数 -->
								<td>フォロワー数: <%= user.passive_relationships.count %></td>

								<!-- リンク -->
								<td><%= link_to "Show", user_path(user), class: "user_#{user.id}" %></td>


							</tr>

						<% end %>
						<!-- each -->

					</tbody>

				</table>

			<% end %>
			<!-- if -->

		</div>

	</div>
</div>

